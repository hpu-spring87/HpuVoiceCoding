<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/task_list_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="22dp"
            android:paddingRight="22dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="加入Coding，体验云端开发之美！"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="12dp"
                android:textSize="18sp" />

            <net.coding.program.common.LoginEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit"
                android:hint="邮箱"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:maxLines="1"
                android:singleLine="true"
                android:textCursorDrawable="@null" />


            <net.coding.program.common.LoginEditText
                android:id="@+id/editGlobal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit"
                android:hint="个性后缀"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:maxLines="1"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:layout_marginTop="12dp" />

            <RelativeLayout
                android:id="@+id/captchaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/editValify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit"
                    android:textSize="18sp"
                    android:textCursorDrawable="@null"
                    android:hint="验证码"
                    android:singleLine="true" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/imageValify"
                    android:layout_width="72dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter" />

            </RelativeLayout>

            <Button
                android:id="@+id/loginButton"
                style="?android:textAppearanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/login_button"
                android:text="立即体验"
                android:textColor="@drawable/font_login_button"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textClause"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:textColor="@color/font_black_content" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

